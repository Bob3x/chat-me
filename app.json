{
    "expo": {
        "name": "chat-me",
        "slug": "chat-me",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "light",
        "newArchEnabled": true,
        "splash": {
            "image": "./assets/splash-icon.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "plugins": [
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "Allow Chat Me to use your location."
                }
            ],
            [
                "expo-image-picker",
                {
                    "photosPermission": "Allow Chat Me to access your photos.",
                    "cameraPermission": "Allow Chat Me to access your camera."
                }
            ]
        ],
        "ios": {
            "bundleIdentifier": "com.chatme.app",
            "supportsTablet": true
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "package": "com.chatme.app",
            "permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"]
        },
        "web": {
            "favicon": "./assets/favicon.png"
        }
    }
}
